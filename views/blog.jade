extends layout

block stylesheet
  link(rel="stylesheet", href="/stylesheets/blog.css")

block content
  .showpost
    h1 Blog
    .blogs
      - for (var i = posts.length - 1; i >= 0; i --) {
        hr
        .post
          .title.flexc
            .subject= posts[i].subject
            .datetime= posts[i].formatDatetime
          .entry!= posts[i].entry
      - }    

