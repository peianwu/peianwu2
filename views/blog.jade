extends layout

block stylesheet
  link(rel="stylesheet", href="/stylesheets/blog.css")

block content
  .showpost
    h1 Blog
    .blogs
      - for (var i = post.length - 1; i >= 0; i --) {
        hr
        .post
          .title.flexc
            .subject= post[i].subject
            .datetime= post[i].formatDatetime
          .entry!= post[i].entry
      - }    

